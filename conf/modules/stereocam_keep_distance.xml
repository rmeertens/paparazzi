<!DOCTYPE module SYSTEM "module.dtd">

<module name="stereocam_keep_distance" dir="stereocam">
  <doc>
    <description>stereocam_forward_velocity</description>
  </doc>
 <settings>
    <dl_settings name="stereocam_avoidance">
      <dl_settings name="mode">
        <dl_setting max="40" min="1" step="1" var="ref_disparity_to_keep" shortname="distance_to_keep"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="stereocam_keep_distance/stereocam_keep_distance.h"/>
  </header>
  <init fun="stereocam_keep_distance_init()"/>
  <periodic fun="stereocam_keep_distance_periodic()" freq="512"/>
  <makefile>
    <file name="stereocam_keep_distance/stereocam_keep_distance.c"  />
    <raw>
      ap.CFLAGS += -DGUIDANCE_V_MODE_MODULE_SETTING=GUIDANCE_V_MODE_RC_DIRECT
      ap.CFLAGS += -DGUIDANCE_H_MODE_MODULE_SETTING=GUIDANCE_H_MODE_MODULE
   </raw> 
  </makefile>
</module>

